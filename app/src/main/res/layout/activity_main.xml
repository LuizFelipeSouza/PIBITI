<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/mensagemId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="26dp"
        android:text="@string/padrao" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/botaoMenuConfigId"
        android:onClick="iniciarLoginAtivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="47dp"
        android:layout_marginEnd="33dp"
        app:srcCompat="@android:drawable/ic_menu_add" />
    <Button
            android:id="@+id/botaoTransmitir"
            android:text="Transmitir"
            android:onClick="transmitir"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="191dp" />
    <Button
            android:id="@+id/botaoInscrever"
            android:text="Inscrever-se"
            android:onClick="inscrever"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="191dp"
            android:layout_alignTop="@+id/botaoTransmitir"
            android:layout_alignEnd="@+id/botaoMenuConfigId"/>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
            android:layout_width="179dp"
            android:layout_height="112dp" app:srcCompat="@mipmap/user_default"
            android:layout_alignParentTop="true" android:layout_marginTop="77dp" android:layout_centerHorizontal="true"
            android:id="@+id/fotoDePerfil" android:contentDescription="TODO"/>
    <TextView
            android:id="@+id/nomeUsuarioTextView"
            android:text="Nome do Usuário"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="214dp"
            android:layout_centerHorizontal="true"
            />
    <TextView
            android:id="@+id/horarioEntradaTextView"
            android:text="Horário de Entrada:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="31dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="207dp"/>
    <TextView
            android:id="@+id/horarioSaidaTextView"
            android:text="Horário de Saída:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="164dp"
            android:layout_alignStart="@+id/horarioEntradaTextView"/>
    <TextView
            android:id="@+id/horarioTotalTextView"
            android:text="Total semanal:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="114dp"
            android:layout_alignStart="@+id/horarioEntradaTextView"/>
    <TextView
            android:id="@+id/setHorarioEntradaTextView"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/horarioEntradaTextView" android:layout_alignParentEnd="true"
            android:layout_marginEnd="50dp"/>
    <TextView
            android:id="@+id/setHorarioSaidaTextView"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/horarioSaidaTextView" android:layout_alignParentEnd="true"
            android:layout_marginEnd="50dp"/>
    <TextView
            android:id="@+id/setHorarioTotalTextView"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp"
            android:layout_centerHorizontal="true" />

